<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffafafa"
    android:paddingBottom="2dp"
    android:paddingLeft="5dp">

    <ImageView
        android:id="@+id/pop"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/widget_highlight"
        android:clickable="true"
        android:scaleType="center"
        android:src="@drawable/arrow" />

    <LinearLayout
        android:id="@+id/top_pane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:paddingTop="3dp" >

        <ImageView
            android:id="@+id/icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:paddingLeft="4dp"
            android:singleLine="true"
            android:textColor="?android:attr/textColorPrimaryInverse"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_pane"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:paddingLeft="4dp"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ff6b6b6b"
            android:textSize="14sp"
            android:textStyle="normal" android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <ImageView
                android:id="@+id/graph"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="2dp"
                android:scaleType="center" >
            </ImageView>

            <ImageView
                android:id="@+id/graph1"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:scaleType="center"
                android:visibility="gone" >
            </ImageView>

            <ImageView
                android:id="@+id/graph2"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:scaleType="center"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/graph3"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:scaleType="center"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/graph4"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:scaleType="center"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/graph5"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:scaleType="center"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/graph6"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:scaleType="center"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/graph7"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:scaleType="center"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>